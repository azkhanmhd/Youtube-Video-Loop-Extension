{
  "manifest_version": 3,
  "name": "YouTube Loop Toggle",
  "version": "1.1",
  "description": "Click the icon to toggle looping on/off for YouTube videos.",
  "permissions": ["scripting", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "48": "icon_inactive.png"
    },
    "default_title": "YouTube Loop"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
